@model IEnumerable<MinhasNotas.Models.Grades>

@{
    ViewData["Title"] = "Index";
}

<h1>Banco de Notas</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Lançar Nota</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                Nota
            </th>
            <th>
                Data e Hora da Prova
            </th>
            <th>
                Estudante
            </th>
            <th>
                Disciplina
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Grade)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DataTest)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Student.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Subject.Name)
            </td>
            <td>
                    <a asp-action="Edit" class="btn btn-warning" asp-route-id="@item.Id">Editar Nota</a> 
                    <a asp-action="Details" class="btn btn-info"  asp-route-id="@item.Id">Informações</a> 
                    <a asp-action="Delete" class="btn btn-danger" asp-route-id="@item.Id">Apagar</a>
            </td>
        </tr>
}
    </tbody>
</table>
