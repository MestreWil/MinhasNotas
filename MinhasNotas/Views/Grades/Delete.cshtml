@model MinhasNotas.Models.Grades

@{
    ViewData["Title"] = "Delete";
}

<h1>Excluir Nota</h1>

<div>
    <h4>Grades</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
           Nota
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Grade)
        </dd>
        <dt class = "col-sm-2">
            Data e Hora da Prova
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.DataTest)
        </dd>
        <dt class = "col-sm-2">
            Estudante
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Student.Name)
        </dd>
        <dt class = "col-sm-2">
            Disciplina
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Subject.Name)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Index">Back to List</a>
    </form>
</div>
