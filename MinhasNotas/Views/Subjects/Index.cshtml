@model IEnumerable<MinhasNotas.Models.Subject>

@{
    ViewData["Title"] = "Index";
}

<h1>Disciplinas</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Cadastrar nova disciplina</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                Nome
            </th>
            <th>
                Turno
            </th>
            <th>
                Sala
            </th>
            <th>
                Professor
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Shift)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Room)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Teacher.Name)
            </td>
            <td>
                    <a asp-action="Edit" class="btn btn-warning" asp-route-id="@item.Id">Editar</a> 
                    <a asp-action="Details" class="btn btn-info" asp-route-id="@item.Id">Informações</a> 
                    <a asp-action="Delete" class="btn btn-danger" asp-route-id="@item.Id">Excluir Disciplina</a>
            </td>
        </tr>
}
    </tbody>
</table>
