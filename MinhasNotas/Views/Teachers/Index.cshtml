@model IEnumerable<MinhasNotas.Models.Teacher>

@{
    ViewData["Title"] = "Index";
}

<h1>Professores Cadastrados</h1>

<p>
    <a asp-action="Create" class="btn btn-primary" >Cadastrar Novo Professor</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EmailAddress)
            </th>
            <th>
                Data de Nascimento
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EmailAddress)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.BirthDate)
            </td>
            <td>
                    <a asp-action="Edit" class="btn btn-warning" asp-route-id="@item.Id">Editar Informações</a> 
                    <a asp-action="Details" class="btn btn-info" asp-route-id="@item.Id">Detalhes</a> 
                    <a asp-action="Delete" class="btn btn-danger"  asp-route-id="@item.Id">Excluir Professor</a>
            </td>
        </tr>
}
    </tbody>
</table>
